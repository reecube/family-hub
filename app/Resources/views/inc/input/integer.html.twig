<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input id="{{ inputId }}" name="{{ inputName }}" class="mdl-textfield__input"
           type="text" pattern="-?[0-9]*(\.[0-9]+)?" value="{{ inputValue }}"
            {% if inputRequired %} required{% endif %}>
    <label class="mdl-textfield__label" for="{{ inputId }}">{{ inputText }}</label>
    <span class="mdl-textfield__error">{{ 'base.form.error.nan' | trans }}</span>
</div>
